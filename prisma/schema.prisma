// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  hash      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tvShows TvShow[]
  movies  Movie[]
}

model TvShow {
  id        String   @id @default(uuid())
  tvApiId   Int
  title     String
  genre     String
  status    String
  season    Int
  episode   Int
  poster    String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Movie {
  id         String   @id @default(uuid())
  movieApiId Int
  title      String
  genre      String
  status     String
  poster     String
  type       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}
